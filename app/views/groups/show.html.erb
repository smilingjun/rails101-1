<div class="container">
  <div class="row justify-content-end">
    <% if current_user && current_user == @group.user %>
    <%= link_to("Edit", edit_group_path(@group), class: "btn btn-primary")%>
    <% end %>
  </div>
  <div class="row justify-content-center">
      <h2><%= @group.title %></h2>
    </div>
  <div class="row justify-content-center">
      <p><%= @group.description %></p>
    </div>
  </div>
</div>
